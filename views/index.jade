extends layout

block content
    .container.col-xs-12.col-sm-8
        .row.col-xs-12
            h1= title
            p Welcome to #{title}

        .row.col-xs-12.col-sm-8.col-md-6.col-lg-5
            ul#contents
                if students.length == 0
                    li No students yet - add some!
                else
                    each student in students
                        include ./students.jade

        .row.col-xs-12.col-lg-8
            form
                fieldset
                    legend Add new student
                    input(type="text" id="firstName" placeholder="First Name" required="true")
                    input(type="text" id="lastName" placeholder="Last Name" required="true")
                    button Add